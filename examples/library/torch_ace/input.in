[CUSTOM]
numAtoms = 1
numTypes = 2
type = H O
#num_descriptors = 8 # number of descriptors for each pair
num_radial = 8 # number of radial descriptors
num_3body = 23 # number of 3body descriptors
cutoff = 5.0 # if changing this cutoff, be sure to change pair zero cutoff in [REFERENCE]

[CALCULATOR]
calculator = LAMMPSCUSTOM 
energy = 1
per_atom_energy = 1
force = 1
stress = 0
nonlinear = 1

[ESHIFT]
Ta = 0.0

[NETWORK]
layer_sizes = num_desc 32 32 1 
learning_rate = 5e-4
num_epochs = 20 # Run for ~150 epochs to get < 100 meV/A error
batch_size = 4 # 363 configs in entire set
save_state_output = Ta_Pytorch.pt
energy_weight = 1e-2
force_weight = 1.0
#training_fraction = 0.7
#manual_seed_flag = 1

[SOLVER]
solver = NETWORK 
compute_testerrs = 1
detailed_errors = 1

[SCRAPER]
scraper = XYZ

[PATH]
dataPath = xyz-water

[OUTFILE]
output_style = custom
metrics = H2O_metrics.md
potential = H2O_pot

[REFERENCE]
units = metal
atom_style = atomic
pair_style = zero 5.0 full 
pair_coeff = * * 

[GROUPS]
# name size eweight fweight vweight
group_sections = name training_size testing_size eweight fweight vweight
group_types = str float float float float float
smartweights = 0
random_sampling = 0
latte_cell_40 =  1.0    0.0       100             1               1.00E-08
latte_cell_50 =  1.0    0.0       100             1               1.00E-08
latte_cell_60 =  1.0    0.0       100             1               1.00E-08

[EXTRAS]
dump_peratom = 1
dump_perconfig = 1
dump_configs = 1

[MEMORY]
override = 0
